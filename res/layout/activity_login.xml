<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:context=".LoginActivity"
        >


    <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/activity_login_iv_photo"
            android:layout_gravity="center_horizontal"
            android:text="@string/companyName"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold"
            android:background="#4990CC"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>


    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/activity_login_et_tendangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            bootstrap:be_roundedCorners="true"
            bootstrap:be_state="default"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/activity_login_iv_photo"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_username"
            android:drawableStart="@drawable/ic_username"
            />

    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/activity_login_et_matkhau"
            android:layout_below="@+id/activity_login_et_tendangnhap"
            bootstrap:be_roundedCorners="true"
            bootstrap:be_state="default"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="20dp"
            android:hint="@string/password"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawableStart="@drawable/ic_password"
            android:singleLine="true"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signIn"
            android:id="@+id/activity_login_btn_dangnhap"
            android:layout_below="@+id/activity_login_et_matkhau"
            bootstrap:bb_type="primary"
            bootstrap:bb_roundedCorners="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:textSize="20sp"
            />

</RelativeLayout>